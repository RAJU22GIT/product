<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
<Dialog title="Create Product">
    <f:SimpleForm>
        <f:content>
            <Label text="Product Name"/>
            <Input value="{productObj>/ProductName}"/>
            <Label text="Product Description"/>
            <Input value="{productObj>/ProductDescription}"/>
            <Label text="Location"/>
            <Input value="{productObj>/Location}"/>
            <Label text="Cost Center"/>
            <Input value="{productObj>/CostCenter}"/>
        </f:content>
    </f:SimpleForm>
    <beginButton>
        <Button text="Save" press="onSaveProduct"/>
    </beginButton>
    <endButton>
    <Button text="Cancel" press="onCancelProduct"/>
    </endButton>
</Dialog>
</core:FragmentDefinition>