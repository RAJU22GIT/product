<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" >
<Dialog title="Create Product">
    <VBox >
        <RadioButton id="asc" text="Ascending" groupName="rButton"/>
        <RadioButton id="desc" text="Descending" groupName="rButton"/>
    </VBox>
    <beginButton>
        <Button text="Confirm" press="onConfirm"></Button>
    </beginButton>
    <endButton>
        <Button text="Cancel" press="onCancel"></Button>
    </endButton>
</Dialog>
</core:FragmentDefinition>
